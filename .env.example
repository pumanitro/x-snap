# X-Snap Configuration

# Directory for storing capture artifacts (PNG, PDF, metadata)
XSNAP_DATA_DIR=./data/x-snap

# Optional: Path to Playwright storageState JSON for X/Twitter auth
# XSNAP_STORAGE_STATE_PATH=./storage-state.json

# Max parallel captures in the background worker
XSNAP_CONCURRENCY=2

# Max retry attempts for failed captures
XSNAP_MAX_RETRIES=3

# Auto-delete captures older than N days (0 = keep forever)
XSNAP_RETENTION_DAYS=0

# Enable HAR recording (increases storage usage)
XSNAP_HAR_ENABLED=false

# Auto-scroll pages to load lazy/dynamic content
XSNAP_AUTO_SCROLL=true

# Max URL submissions per minute (rate limiting)
XSNAP_RATE_LIMIT=10

# Optional: Connect to a remote Playwright browser (e.g., Browserless.io)
# PLAYWRIGHT_WS_ENDPOINT=ws://localhost:3000

# Server port
PORT=3000
